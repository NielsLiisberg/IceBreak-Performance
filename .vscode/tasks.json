{
	"version": "2.0.0",
	"presentation": {
		"echo": false,
		"reveal": "never",
		"focus": true,
		"panel": "dedicated",
		"showReuseMessage": true,
		"clear": true
	},
	"tasks": [{
		"label": "CRTICEPGM",
		"type": "shell",
		"group": {
			"kind": "build",
			"isDefault": true
		},
		"command": "node",
		"args": [
			"./.vscode/compile.js",
			"${file}",
			"${relativeFile}",
			"list"
		],
		"problemMatcher": {
			"owner": "rpgle",
			"fileLocation": ["relative", "${workspaceRoot}"],
			"pattern": {
				"regexp": "^(.*):(\\d+):(\\d+):(.*):\\s+(.*)$",
				"file": 1,
				"line": 2,
				"column": 3,
				"severity": 4,
				"message": 5
			}
		}
	},{
		"label": "Locus",
		"type": "shell",
		"group": {
			"kind": "build",
			"isDefault": true
		},
		"command": "locust",
		"args": [
			"-H",
			"http://my_ibm_i:60800",
			"-f",
			"${file}",
			"-t",
			"120",
			"-u",
			"200",
			"-r",
			"10"
		],

	}]
}
